      #store.col-md-9
        // store top filter
        .store-filter.clearfix
          .store-sort
            label
              | Sort By:
              select.input-select
                option(value='0') Popular
                option(value='1') Position
            label
              | Show:
              select.input-select
                option(value='0') 20
                option(value='1') 50
          ul.store-grid
            li.active
              i.fa.fa-th
            li
              a(href='#')
                i.fa.fa-th-list
        // /store top filter
        // store products
        .row
          // product
        mixin product(store={})
          .col-md-4.col-xs-6.product
            .product-img
              img(src=`../public/uploads/${store.photo}` alt=store.name width=200)
            .product-body
              p.product-category Category
              h3.product-name
                a(href=`/store/${store._id}/edit`) #{store.name}
              h4.product-price
                | $#{store.price}
                del.product-old-price $990.00
        each store in stores
          +product(store)
