                .qty 2
            // /Wishlist
            // Cart
            .dropdown
              a.dropdown-toggle(data-toggle='dropdown' aria-expanded='true')
                i.fa.fa-shopping-cart
                span Your Cart
                .qty 3
              .cart-dropdown
                .cart-list
                  .product-widget
                    .product-img
                      img(src='../public/electro/img/product01.png' alt='')
                    .product-body
                      h3.product-name
                        a(href='#') Jon Snow
                      h4.product-price
                        span.qty 1x
                        | $980.00
                    button.delete
                      i.fa.fa-close
                  .product-widget
                    .product-img
                      img(src='../public/electro/img/product02.png' alt='')
                    .product-body
                      h3.product-name
