  title Electro - HTML Ecommerce Template
  // Google font
  link(href='https://fonts.googleapis.com/css?family=Montserrat:400,500,700' rel='stylesheet')
  // Bootstrap
  link(type='text/css' rel='stylesheet' href='../public/electro/css/bootstrap.min.css')
  // Slick
  link(type='text/css' rel='stylesheet' href='../public/electro/css/slick.css')
  link(type='text/css' rel='stylesheet' href='../public/electro/css/slick-theme.css')
  // nouislider
  link(type='text/css' rel='stylesheet' href='../public/electro/css/nouislider.min.css')
  // Font Awesome Icon
  link(rel='stylesheet' href='../public/electro/css/font-awesome.min.css')
  // Custom stlylesheet
  link(type='text/css' rel='stylesheet' href='../public/electro/css/style.css')
  // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
  // WARNING: Respond.js doesn't work if you view the page via file://
  //if lt IE 9
    script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
// HEADER
header
  // TOP HEADER
  #top-header
    .container
      ul.header-links.pull-left
        li
          a(href='#')
            i.fa.fa-phone
            |  +021-95-51-84
        li
          a(href='#')
            i.fa.fa-envelope-o
            |  email@email.com
        li
          a(href='#')
            i.fa.fa-map-marker
            |  1734 Stonecoal Road
      ul.header-links.pull-right
        li
          a(href='#')
            i.fa.fa-dollar
            |  USD
        li
          a(href='#')
            i.fa.fa-user-o
            |  My Account
  // /TOP HEADER
  // MAIN HEADER
  #header
    // container
    .container
      // row
      .row
        // LOGO
        .col-md-3
          .header-logo
            a.logo(href='#')
              img(src='../public/electro/img/logo.png' alt='')
        // /LOGO
        // SEARCH BAR
        .col-md-6
          .header-search
            form
              select.input-select
                option(value='0') All Categories
                option(value='1') Category 01
                option(value='1') Category 02
              input.input(placeholder='Search here')
              button.search-btn Search
        // /SEARCH BAR
        // ACCOUNT
        .col-md-3.clearfix
          .header-ctn
            // Wishlist
            div
              a(href='#')
                i.fa.fa-heart-o
                span Your Wishlist
                .qty 2
            // /Wishlist
            // Cart
            .dropdown
              a.dropdown-toggle(data-toggle='dropdown' aria-expanded='true')
                i.fa.fa-shopping-cart
                span Your Cart
                .qty 3
              .cart-dropdown
                .cart-list
                  .product-widget
                    .product-img
                      img(src='../public/electro/img/product01.png' alt='')
                    .product-body
                      h3.product-name
                        a(href='#') Jon Snow
                      h4.product-price
                        span.qty 1x
                        | $980.00
                    button.delete
                      i.fa.fa-close
                  .product-widget
                    .product-img
                      img(src='../public/electro/img/product02.png' alt='')
                    .product-body
                      h3.product-name
                        a(href='#') product name goes here
                      h4.product-price
                        span.qty 3x
                        | $980.00
                    button.delete
                      i.fa.fa-close
                .cart-summary
                  small 3 Item(s) selected
                  h5 SUBTOTAL: $2940.00
                .cart-btns
                  a(href='#') View Cart
                  a(href='#')
                    | Checkout  
                    i.fa.fa-arrow-circle-right
            // /Cart
            // Menu Toogle
            .menu-toggle
              a(href='#')
                i.fa.fa-bars
                span Menu
            // /Menu Toogle
        // /ACCOUNT
      // row
    // container
  // /MAIN HEADER
// /HEADER
// NAVIGATION
nav#navigation
  // container
  .container
    // responsive-nav
    #responsive-nav
      // NAV
      ul.main-nav.nav.navbar-nav
        li.active
          a(href='#') Home
        li
          a(href='#') Hot Deals
        li
          a(href='#') Categories
        li
          a(href='#') Laptops
        li
          a(href='#') Smartphones
        li
          a(href='#') Cameras
        li
          a(href='#') Accessories
      // /NAV
    // /responsive-nav
  // /container
// /NAVIGATION
